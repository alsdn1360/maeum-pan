{
  "name": "@maeum-pan/api",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "source venv/bin/activate && uvicorn main:app --reload --port 8000",
    "start": "source venv/bin/activate && uvicorn main:app --host 0.0.0.0 --port 8000",
    "install:py": "python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "lint": "source venv/bin/activate && ruff check .",
    "lint:fix": "source venv/bin/activate && ruff check . --fix",
    "format": "source venv/bin/activate && ruff format ."
  }
}
